<%= form_with(model: order, local: true,multipart: true) do |form| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
        <% order.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :from %>
    <%= form.text_field :from %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <%= select(:order, :category, [['breakfast', 'breakfast'], ['lunch', 'lunch'], ['dinner', 'dinner']]) %>
  </div>

  <div class="field">
      <%= label_tag(:order_menu, "menu") %>
      <%= form.file_field :menu %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

