<p id="notice"><%= notice %></p>

<div class="row justify-content-around">
  <div class="col-7 border border-danger">
    <h1>Orders</h1>
    <h3 class="text-right"><%= link_to "Add order", new_order_path %></h3>

    <table class="table table-hover table-dark">
      <thead>
        <tr>
          <th>Order</th>
          <th>Resturants</th>
          <th>Owner</th>
          <th>invited</th>
          <th>joined</th>
          <th>Status</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>
    
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.category %></td>
            <td><%= order.from %></td>
            <td><%= order.user.username %></td>
            <td>Not Done Yet</td>
            <td>Not Done Yet</td>
            <td><%= order.status %></td>
            <td><%= link_to 'View', order %></td>
            <% if order.status == "waiting" %>
              <td><%= link_to 'Finish', finish_path(order) %></td>
              <td><%= link_to 'Cancel', cancel_path(order), data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>